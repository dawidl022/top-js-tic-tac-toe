#!/bin/env bash

compile() {
    if [[ $1 = false ]]; then
        echo "Changes detected..."
    fi
    tsc scripts/*.ts --strict --target es6 && \
    echo "Compiled ts -> js [$(date)]"
    sed -Ei -e "/export \{\}/d" scripts/*.js &&

    first_time=false
}

first_time=true

while true
do
    inotifywait scripts/*.ts -e modify &> /dev/null | compile $first_time
    first_time=false
done
